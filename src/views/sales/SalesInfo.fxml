<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<GridPane fx:id="subMenuGP" prefHeight="200.0" prefWidth="1600.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.sales.SalesInfoController" stylesheets="@/main/Main.css">
    <padding>
        <Insets bottom="25" left="30" right="20" top="25" />
    </padding>
    <children>
        <Label fx:id="orderIdLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" text="Order id:" />
        <TextField fx:id="orderIdField" GridPane.columnIndex="1" GridPane.rowIndex="0" disable="true"/>

        <Label fx:id="customerIdLabel" GridPane.columnIndex="0" GridPane.rowIndex="1" text="Customer id:" />
        <TextField fx:id="customerIdField" GridPane.columnIndex="1" GridPane.rowIndex="1" disable="true"/>

        <Label fx:id="subscriptionIdLabel" GridPane.columnIndex="0" GridPane.rowIndex="2" text="Subscription id" />
        <TextField fx:id="subscriptionIdField" GridPane.columnIndex="1" GridPane.rowIndex="2" disable="true"/>

        <Label fx:id="businessBoxLabel" GridPane.columnIndex="0" GridPane.rowIndex="3" text="Business:" />
        <CheckBox fx:id="businessBox" GridPane.columnIndex="1" GridPane.rowIndex="3" disable="true"/>

        <Label fx:id="businessNameLabel" GridPane.columnIndex="0" GridPane.rowIndex="4" text="Business name:" />
        <TextField fx:id="businessNameField" GridPane.columnIndex="1" GridPane.rowIndex="4" disable="true"/>

        <Label fx:id="startSubscriptionLabel" GridPane.columnIndex="0" GridPane.rowIndex="5" text="Subscription started:" />
        <DatePicker fx:id="startSubscription" GridPane.columnIndex="1" GridPane.rowIndex="5" disable="true"/>

        <Label fx:id="endSubscriptionLabel" GridPane.columnIndex="0" GridPane.rowIndex="6" text="Subscription ended:" />
        <DatePicker fx:id="endSubscription" GridPane.columnIndex="1" GridPane.rowIndex="6" disable="true"/>

        <!--next collumn><!-->

        <Label fx:id="fNameLabel" GridPane.columnIndex="3" GridPane.rowIndex="0" text=" First name:"/>
        <TextField fx:id="fNameField" GridPane.columnIndex="4" GridPane.rowIndex="0" disable="true"/>

        <Label fx:id="lNameLabel" GridPane.columnIndex="3" GridPane.rowIndex="1" text=" Last name:" />
        <TextField fx:id="lNameField" GridPane.columnIndex="4" GridPane.rowIndex="1" disable="true"/>

        <Label fx:id="phoneLabel" GridPane.columnIndex="3" GridPane.rowIndex="2" text=" Phone number:"/>
        <TextField fx:id="phoneField" GridPane.columnIndex="4" GridPane.rowIndex="2" disable="true"/>

        <Label fx:id="emailLabel" GridPane.columnIndex="3" GridPane.rowIndex="3" text=" Email:" />
        <TextField fx:id="emailField" GridPane.columnIndex="4" GridPane.rowIndex="3" disable="true"/>

        <Label fx:id="addressLabel" GridPane.columnIndex="3" GridPane.rowIndex="4" text=" Address:" />
        <TextField fx:id="addressField" GridPane.columnIndex="4" GridPane.rowIndex="4" disable="true"/>

        <Label fx:id="zipCodeLabel" GridPane.columnIndex="3" GridPane.rowIndex="5" text=" Zip / postal code:"/>
        <TextField fx:id="zipCodeField" GridPane.columnIndex="4" GridPane.rowIndex="5" disable="true"/>

        <Label fx:id="placeLabel" GridPane.columnIndex="3" GridPane.rowIndex="6" text=" City / town:"/>
        <TextField fx:id="placeField" GridPane.columnIndex="4" GridPane.rowIndex="6" disable="true"/>

        <Label fx:id="deadlineLabel" GridPane.columnIndex="3" GridPane.rowIndex="7" text=" Deadline:"/>
        <TextField fx:id="deadlineField" GridPane.columnIndex="4" GridPane.rowIndex="7" disable="true"/>

        <Label fx:id="priceLabel" GridPane.columnIndex="3" GridPane.rowIndex="8" text=" Price:"/>
        <TextField fx:id="priceField" GridPane.columnIndex="4" GridPane.rowIndex="8" disable="true"/>

        <Label fx:id="statusBoxLabel" GridPane.columnIndex="6" GridPane.rowIndex="0" text=" Status:" />
        <ComboBox fx:id="statusBox" GridPane.columnIndex="7" GridPane.rowIndex="0" disable="true"/>

        <Label fx:id="customerRequestsLabel" GridPane.columnIndex="6" GridPane.rowIndex="1" text=" Customer requests:" />
        <TextArea fx:id="customerRequestsArea" GridPane.columnIndex="7" GridPane.rowIndex="1" GridPane.rowSpan="4" prefWidth="200" disable="true"/>

        <HBox alignment="BOTTOM_LEFT" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="10">
            <children>
                <Button fx:id="editOrderButton" styleClass="subMenuButton" text="Edit order"/>
            </children>
        </HBox>
    </children>
</GridPane>