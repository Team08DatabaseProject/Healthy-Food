<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.collections.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import driver.DriverOrderStatus?>
<!--> Table in submenu "Change order status" </!-->
<?import javafx.scene.control.cell.PropertyValueFactory?>

<GridPane fx:id="centerGrid" prefHeight="500" prefWidth="500" BorderPane.alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="driver.ControllerDriverCS">
    <TableView fx:id="tables" GridPane.rowIndex="0" prefHeight="500.0" prefWidth="500.0" GridPane.valignment="CENTER">
        <columns>
            <TableColumn prefWidth="40.0" text="Order no."/>
            <TableColumn prefWidth="40.0" text="Address"/>
            <TableColumn prefWidth="40.0" text="Deadline"/>
            <TableColumn prefWidth="40.0" text="Status"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
    <HBox fx:id="bottomHBox" GridPane.rowIndex="1" prefHeight="80.0" prefWidth="100.0" GridPane.valignment="BOTTOM">
        <children>
            <Button fx:id="deliveredButton" HBox.hgrow="ALWAYS" mnemonicParsing="false" text="Mark as delivered" />
            <Button fx:id="notDeliveredButton" HBox.hgrow="ALWAYS" mnemonicParsing="false" text="Mark as not delivered" />
        </children>
    </HBox>
</GridPane>



