<!--> Table in submenu "Employees" </!-->

<TabPane tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="users.ceo.ControllerCEOInventory">
    <tabs>
        <Tab fx:id="pOrdersTab" text="Purchase orders">
            <GridPane style="-fx-padding: 10px;">
                <ComboBox fx:id="pOrdersStatus" style="-fx-alignment: center-right" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Not Received" />
                        <String fx:value="Received" />
                    </FXCollections>
                </items>
                </ComboBox>
                <TableView fx:id="pOrdersTable" maxWidth="550" GridPane.columnIndex="0" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
                    <placeholder>
                        <Label text="" />
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="IDCol" prefWidth="20.0" text="ID" />
                        <TableColumn fx:id="supplierCol" prefWidth="40.0" text="Supplier" />
                        <TableColumn fx:id="linesCol" prefWidth="40.0" text="Number of lines" />
                        <TableColumn fx:id="placedCol" prefWidth="60.0" text="Date placed" />
                        <TableColumn fx:id="receivedCol" prefWidth="60.0" text="Received" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <GridPane.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                    </GridPane.margin>
                </TableView>
                <GridPane alignment="TOP_LEFT" style="-fx-grid-lines-visible: true; -fx-alignment: top-left" maxHeight="500" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.rowSpan="2">
                    <Label fx:id="pOrderTitle" alignment="TOP_LEFT" prefHeight="20" text="Purchase order summary:" visible="false" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
                    <Text fx:id="pOrderSummary" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Text fx:id="pOrderSupplierSummary" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <TableView fx:id="pOrderLinesTable" maxHeight="600" prefHeight="600" style="-fx-alignment: center" visible="false" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS">
                        <placeholder>
                            <Label text="" />
                        </placeholder>
                        <columns>
                            <TableColumn fx:id="ingredientCol" prefWidth="60.0" text="Ingredient" />
                            <TableColumn fx:id="priceCol" prefWidth="40.0" text="Price" />
                            <TableColumn fx:id="quantityCol" prefWidth="40.0" text="Quantity" />
                            <TableColumn fx:id="totalCol" prefWidth="40.0" text="Total" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                        <GridPane.margin>
                            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                        </GridPane.margin>
                    </TableView>
                    <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                        <Label fx:id="grandTotalLabel" visible="false" text="Grand total: " />
                        <TextField fx:id="grandTotalField" visible="false" editable="false" style="-fx-alignment: center-right;" text="0.00" />
                    </HBox>
                    <columnConstraints>
                        <ColumnConstraints prefWidth="100" />
                        <ColumnConstraints halignment="RIGHT" prefWidth="200" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints prefHeight="10.0" />
                        <RowConstraints prefHeight="300.0" />
                        <RowConstraints prefHeight="600.0" />
                        <RowConstraints prefHeight="100.0" />
                    </rowConstraints>
                    <GridPane.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                    </GridPane.margin>
                </GridPane>
            </GridPane>
        </Tab>
        <Tab fx:id="newPOrderTab" text="New purchase order">
            <VBox>
                <GridPane style="-fx-padding: 10px;">
                    <Label text="Supplier:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="supplierNameField" editable="false" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Button fx:id="chooseSupplierButton" text="Choose" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <Label text="Phone number:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="phoneNoField" editable="false" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextArea fx:id="supplierAddressField" editable="false" prefRowCount="2" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Button fx:id="resetNewPOrderButton" text="Reset purchase order" GridPane.columnIndex="3" GridPane.rowIndex="0" />
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
                 <TableView fx:id="newPOrderLinesTable" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="3" GridPane.vgrow="ALWAYS">
                    <placeholder>
                        <Label text="" />
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="ingredientCheckedCol" text="Checked" />
                        <TableColumn fx:id="newIngredientCol" prefWidth="60.0" text="Ingredient" />
                        <TableColumn fx:id="newPriceCol" prefWidth="40.0" text="Price" />
                        <TableColumn fx:id="newQuantityCol" prefWidth="40.0" text="Quantity" />
                        <TableColumn fx:id="newTotalCol" prefWidth="40.0" text="Total" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <GridPane.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                    </GridPane.margin>
                </TableView>
                <HBox alignment="CENTER_RIGHT">
                    <Label text="Grand total: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="newGrandTotalField" editable="false" style="-fx-alignment: center-right;" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                </HBox>
                 <GridPane>
                    <HBox GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
                        <Button fx:id="addLineButton" text="Add" />
                        <Button fx:id="removeLinesButton" text="Remove" />
                        <Button fx:id="savePOrderButton" text="Save" />
                    </HBox>
                    <columnConstraints>
                        <ColumnConstraints prefWidth="100" />
                        <ColumnConstraints halignment="RIGHT" prefWidth="200" />
                    </columnConstraints>
                     <GridPane.margin>
                         <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </GridPane.margin>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
            </VBox>
        </Tab>
        <Tab fx:id="StatTab" text="Statistics">

        </Tab>
    </tabs>
</TabPane>
