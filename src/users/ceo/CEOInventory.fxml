<TabPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="users.ceo.ControllerCEOInventory" tabClosingPolicy="UNAVAILABLE">
    <tabs>
        <Tab text="Purchase orders">
            <GridPane>
                <ComboBox fx:id="ordersStatus" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-alignment: center-right" />
                <TableView fx:id="ordersTable" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <columns>
                        <TableColumn fx:id="ID" prefWidth="20.0" text="ID" />
                        <TableColumn fx:id="supplierCol" prefWidth="40.0" text="Supplier" />
                        <TableColumn fx:id="lines" prefWidth="40.0" text="Number of lines" />
                        <TableColumn fx:id="placed" prefWidth="40.0" text="Date placed" />
                        <TableColumn fx:id="expected" prefWidth="20.0" text="Date expected" />
                        <TableColumn fx:id="Received" prefWidth="60.0" text="Received" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /> <!--> fix vgrow <!-->
                    </columnResizePolicy>
                    <GridPane.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                    </GridPane.margin>
                </TableView>
            </GridPane>
        </Tab>
        <Tab text="New purchase order">

        </Tab>
        <Tab text="Statistics">

        </Tab>
    </tabs>
</TabPane>