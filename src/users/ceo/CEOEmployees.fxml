<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<!--> Table in submenu "Employees" </!-->

<?import javafx.scene.layout.HBox?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="users.ceo.ControllerCEOEmployees">
    <children>
      <TableView fx:id="employeesTable" GridPane.columnIndex="0" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">
          <columns>
              <TableColumn prefWidth="40.0" text="First name" />
              <TableColumn prefWidth="40.0" text="Last name" />
              <TableColumn prefWidth="40.0" text="E-mail" />
              <TableColumn prefWidth="20.0" text="Phone no." />
              <TableColumn prefWidth="60.0" text="Address" />
              <TableColumn prefWidth="30.0" text="Position" />
              <TableColumn prefWidth="30.0" text="Salary (NOK)" />
          </columns>
          <columnResizePolicy>
              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /> <!--> fix vgrow <!-->
          </columnResizePolicy>
         <GridPane.margin>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </GridPane.margin>
      </TableView>
      <HBox fx:id="employeesButtons" GridPane.columnIndex="0" GridPane.rowIndex="1" xmlns:fx="http://javafx.com/fxml">
          <Button fx:id="addEmployeeFormButton" mnemonicParsing="false" styleClass="SmallButton" text="Add employee" textAlignment="CENTER" />
          <Button fx:id="refreshEmployeesButton" mnemonicParsing="false" styleClass="SmallButton" text="Refresh" textAlignment="CENTER" />
         <GridPane.margin>
            <Insets left="4.0" right="4.0" top="4.0" />
         </GridPane.margin>
      </HBox>
    </children>
   <columnConstraints>
      <ColumnConstraints percentWidth="100" prefWidth="100" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="30" percentHeight="80" />
      <RowConstraints minHeight="15" prefHeight="40" />
   </rowConstraints>
</GridPane>
