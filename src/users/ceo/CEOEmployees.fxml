<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<!--> Table in submenu "Employees" </!-->

<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/null" fx:controller="users.ceo.ControllerCEOEmployees" maxHeight="Infinity" maxWidth="Infinity">
    <TableView fx:id="emmployeesTable" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <columns>
            <TableColumn prefWidth="40.0" text="First name" />
            <TableColumn prefWidth="40.0" text="Last name" />
            <TableColumn prefWidth="40.0" text="E-mail" />
            <TableColumn prefWidth="40.0" text="Phone no." />
            <TableColumn prefWidth="40.0" text="Address" />
            <TableColumn prefWidth="40.0" text="Position" />
            <TableColumn prefWidth="40.0" text="Salary" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /> <!--> fix vgrow <!-->
        </columnResizePolicy>
    </TableView>
    <VBox fx:id="employeesButtons" GridPane.columnIndex="0" GridPane.rowIndex="1" xmlns:fx="http://javafx.com/fxml">
        <Button fx:id="addEmployeeButton" mnemonicParsing="false" styleClass="SmallButton" text="Add employee" textAlignment="CENTER" />
    </VBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
