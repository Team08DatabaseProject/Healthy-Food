<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<GridPane fx:id="orderInfoGP" fx:controller="users.chef.ControllerChefOrderInfo" hgap="5" prefHeight="500.0" prefWidth="800.0" vgap="10" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml/1" stylesheets="@/users/chef/ChefStyle.css" gridLinesVisible="true">
    <padding>
        <Insets bottom="25" left="30" right="20" top="25" />
    </padding>
    <children>
        <VBox alignment="TOP_LEFT" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.fillWidth="false" prefWidth="180">
            <children>
                <Label fx:id="orderIdLabel" text="Order ID: " prefWidth="180" prefHeight="30"/>
                <Label fx:id="deadlineLabel" text="Deadline: " prefWidth="180" prefHeight="30"/>
                <Label fx:id="priceLabel" text="Price: " prefWidth="180" prefHeight="30"/>
                <Label fx:id="addressLabel" text="Deadline: " prefWidth="180" prefHeight="30"/>
            </children>
        </VBox>

        <VBox alignment="TOP_CENTER" spacing="10" GridPane.columnSpan="0" GridPane.rowIndex="0" prefWidth="180">
            <Label fx:id="requestLabel" text="Customer requests: " prefWidth="180"/>
        </VBox>

        <TableView fx:id="dishesInOrderTable" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="500">
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            <TableColumn fx:id="dishNameCol" prefWidth="170" text="Dish name"/>
            <TableColumn fx:id="dishAmountCol" prefWidth="108" text="Amount"/>
            <TableColumn fx:id="dishPriceCol" prefWidth="120" text="Price (NOK)"/>
            <TableColumn fx:id="dishInfoCol" prefWidth="100" text="View info"/>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </children>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="300"/>
        <ColumnConstraints hgrow="SOMETIMES" prefWidth="400"/>
    </columnConstraints>
</GridPane>
