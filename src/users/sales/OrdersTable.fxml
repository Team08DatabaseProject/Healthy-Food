<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--> Table in submenu "Orders for Sales" </!-->

<GridPane prefHeight="500" prefWidth="200.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="users.sales.ControllerSalesEdit">
    <children>
        <BorderPane fx:id="rootPaneCreate">
            <center>
                <TableView fx:id="ordersTable" editable="true" prefHeight="800.0" prefWidth="1600.0" GridPane.columnIndex="0"
                           GridPane.hgrow="SOMETIMES" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS" GridPane.columnSpan="3">
                    <columns>
                        <TableColumn prefWidth="40.0" text="Order ID." />
                        <TableColumn prefWidth="40.0" text="Customer ID" />
                        <TableColumn prefWidth="40.0" text="Subscription ID" />
                        <TableColumn prefWidth="40.0" text="First name" />
                        <TableColumn prefWidth="40.0" text="Last name" />
                        <TableColumn prefWidth="40.0" text="Business name" />
                        <TableColumn prefWidth="40.0" text="Email" />
                        <TableColumn prefWidth="40.0" text="Phone number" />
                        <TableColumn prefWidth="40.0" text="Customer requests" />
                        <TableColumn prefWidth="40.0" text="Deadline" />
                        <TableColumn prefWidth="40.0" text="Price" />
                        <TableColumn prefWidth="40.0" text="Address" />
                        <TableColumn prefWidth="40.0" text="Status" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /> <!--> fix vgrow <!-->
                    </columnResizePolicy>
                </TableView>
            </center>
            <bottom>
                <HBox GridPane.columnIndex="0" GridPane.rowIndex="1" xmlns:fx="http://javafx.com/fxml" prefHeight="50">
                   <children>
                       <Button fx:id="createOrderButton" prefHeight="20" prefWidth="50" text="Create order" styleClass="newOrderButton"/>
                       <Button fx:id="deleteOrderButton" prefHeight="20" prefWidth="50" text="Delete order" styleClass="newOrderButton"/>
                       <Button fx:id="editOrderButton" prefHeight="20" prefWidth="50" text="Edit order" styleClass="newOrderButton"/>
                   </children>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
