<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--> Table in submenu "Orders for Sales" </!-->

<GridPane prefHeight="500" prefWidth="200.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
          fx:controller="users.sales.ControllerSalesOrders" stylesheets="@/users/sales/SalesStyle.css">
    <children>
        <BorderPane fx:id="rootPaneOrders">
            <center>
                <TableView BorderPane.alignment="TOP_CENTER" fx:id="ordersTable" editable="true" minHeight="200" prefWidth="1600.0"
                           GridPane.columnIndex="0" GridPane.rowIndex="0" >
                    <columns>
                        <TableColumn prefWidth="20.0" text="Order ID" styleClass="column"/>
                        <!--><TableColumn prefWidth="30.0" text="Customer ID" styleClass="column"/>
                        <TableColumn prefWidth="35.0" text="Subscription ID" styleClass="column"/>
                        <TableColumn prefWidth="40.0" text="First name" styleClass="column"/>
                        <TableColumn prefWidth="40.0" text="Last name" styleClass="column"/>
                        <TableColumn prefWidth="40.0" text="Business name" styleClass="column"/>
                        <TableColumn prefWidth="40.0" text="Email" styleClass="column"/>
                        <TableColumn prefWidth="40.0" text="Phone number" styleClass="column"/>
                        <TableColumn prefWidth="40.0" text="Customer requests" styleClass="column"/><!-->
                        <TableColumn prefWidth="40.0" text="Deadline" styleClass="column"/>
                        <TableColumn prefWidth="40.0" text="Price" styleClass="column"/>
                        <!--><TableColumn prefWidth="40.0" text="Address" styleClass="column"/><!-->
                        <TableColumn prefWidth="40.0" text="Status" styleClass="column"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </center>
            <right>
                <VBox BorderPane.alignment="BOTTOM_CENTER" xmlns:fx="http://javafx.com/fxml" prefHeight="50">
                    <children>
                        <Button fx:id="createOrderButton" prefHeight="20" prefWidth="50" text="Create order"
                                styleClass="newOrderButton"/>
                        <Button fx:id="deleteOrderButton" prefHeight="20" prefWidth="50" text="Delete order"
                                styleClass="newOrderButton"/>
                    </children>
                </VBox>
            </right>
            <bottom>

            </bottom>
        </BorderPane>
    </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
