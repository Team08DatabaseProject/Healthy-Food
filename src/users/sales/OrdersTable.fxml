<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--> Table in submenu "Orders for Sales" </!-->
<GridPane  prefHeight="200" prefWidth="200.0" xmlns:fx="http://javafx.com/fxml" fx:controller="users.sales.ControllerSalesCreate">
    <children>
        <TableView fx:id="ordersTable" GridPane.columnIndex="0" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">
            <columns>
                <TableColumn prefWidth="40.0" text="Order ID."/>
                <TableColumn prefWidth="40.0" text="Customer ID"/>
                <TableColumn prefWidth="40.0" text="Subscription ID"/>
                <TableColumn prefWidth="40.0" text="First name" />
                <TableColumn prefWidth="40.0" text="Last name" />
                <TableColumn prefWidth="40.0" text="Business name" />
                <TableColumn prefWidth="40.0" text="Email" />
                <TableColumn prefWidth="40.0" text="Phone number" />
                <TableColumn prefWidth="40.0" text="Customer requests"/>
                <TableColumn prefWidth="40.0" text="Deadline"/>
                <TableColumn prefWidth="40.0" text="Price"/>
                <TableColumn prefWidth="40.0" text="Address"/>
                <TableColumn prefWidth="40.0" text="Status"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/> <!--> fix vgrow <!-->
            </columnResizePolicy>
        </TableView>
        <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" xmlns:fx="http://javafx.com/fxml">
            <Button fx:id="createOrderButton" text="Create order" prefWidth="50"></Button>
        </VBox>
    </children>
    <BorderPane fx:id="rootPaneCreate">
        <center>
        </center>
    </BorderPane>
</GridPane>