<!--> Textfields for registering new order </!-->

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<GridPane fx:id="textGrid" hgap="10" prefHeight="500.0" prefWidth="600.0" vgap="10" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets bottom="25" left="30" right="20" top="25" />
    </padding>
   <children>
   
       <TextField fx:id="fNameField" GridPane.columnIndex="0" GridPane.rowIndex="0" promptText="First name"/>
   
       <TextField fx:id="lNameField" GridPane.columnIndex="0" GridPane.rowIndex="1" promptText="Last name"/>
   
       <CheckBox fx:id="businessBox" GridPane.columnIndex="0" GridPane.rowIndex="2" text="Business:"/>
   
       <TextField fx:id="businessNameField" GridPane.columnIndex="0" GridPane.rowIndex="3" promptText="Business name"/>
   
       <TextField fx:id="phoneField" GridPane.columnIndex="0" GridPane.rowIndex="4" promptText="Phone number"/>
   
       <TextField fx:id="emailField" GridPane.columnIndex="0" GridPane.rowIndex="5" promptText="Email address"/>

       <!--next collumn><!-->
   
       <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Delivery address"/>
   
       <TextField fx:id="zipCodeField" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="ZIP Code"/>

       <TextField fx:id="placeField" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="City"/>

       <DatePicker fx:id="deadlinePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" promptText="Delivery date"/>
   
       <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="4" promptText="Price"/>
   
       <ComboBox fx:id="statusBox" GridPane.columnIndex="1" GridPane.rowIndex="5" promptText="Status">
           <items>
               <FXCollections fx:factory="observableArrayList" >
                   <String fx:value="Created" />
                   <String fx:value="In preparation" />
                   <String fx:value="Ready for Delivery" />
                   <String fx:value="In delivery" />
                   <String fx:value="Delivered" />
               </FXCollections>
           </items>
       </ComboBox>

       <!--next collumn><!-->

       <TextField fx:id="orderIdField" GridPane.columnIndex="2" GridPane.rowIndex="0" promptText="Order ID (leave empty)"/>

       <TextField fx:id="customerIdField" GridPane.columnIndex="2" GridPane.rowIndex="1" promptText="Customer ID (leave empty)"/>

       <TextField fx:id="subcriptionIdField" GridPane.columnIndex="2" GridPane.rowIndex="2" promptText="Subscription ID (leave empty)"/>

       <TextArea fx:id="customerRequestsField" GridPane.columnIndex="2" GridPane.rowIndex="3" GridPane.rowSpan="4" prefWidth="200"
                 promptText="Extra requests"/>

       <VBox alignment="BOTTOM_LEFT" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="10">
           <children>
              <Button fx:id="createOrderButton" styleClass="newOrderButton" text="Create new order" />
           </children>
       </VBox>
   </children>
</GridPane>
