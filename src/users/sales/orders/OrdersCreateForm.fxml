<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane fx:id="ordersFormGrid" hgap="10" prefHeight="500.0" prefWidth="1600.0" vgap="10" BorderPane.alignment="CENTER"
          xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" gridLinesVisible="true"
          fx:controller="users.sales.orders.ControllerSalesOrdersForm" stylesheets="@/users/sales/SalesStyle.css">

    <padding>
        <Insets bottom="25" left="30" right="20" top="25" />
    </padding>
    <children>
        <VBox GridPane.columnIndex="0" spacing="10">
            <TextField fx:id="fNameField"  promptText="First name"/>

            <TextField fx:id="lNameField" promptText="Last name"/>

            <CheckBox fx:id="businessBox" text="Business" prefHeight="25"/>

            <TextField fx:id="businessNameField" promptText="Business name"/>

            <TextField fx:id="phoneField" promptText="Phone number"/>

            <TextField fx:id="emailField" promptText="Email address"/>
        </VBox>

       <!--next collumn><!-->

        <VBox GridPane.columnIndex="1" spacing="10">
            <TextField fx:id="addressField" promptText="Delivery address"/>

            <TextField fx:id="zipCodeField" promptText="ZIP Code"/>

            <TextField fx:id="placeField" promptText="City"/>

            <Label fx:id="deadlineLabel" text="  Date and time of delivery:" prefHeight="25"/>

            <DatePicker fx:id="deadlineDatePicker" promptText="Date"/>
            <HBox spacing="10">
                <ComboBox fx:id="deadlineHrBox" promptText="Hour" />

                <ComboBox fx:id="deadlineMinBox" promptText="Minute" />
            </HBox>

            <ComboBox fx:id="statusBox" promptText="Status">
                <items>
                    <FXCollections fx:factory="observableArrayList" >
                        <String fx:value="Created" />
                        <String fx:value="In preparation" />
                        <String fx:value="Ready for Delivery" />
                        <String fx:value="In delivery" />
                        <String fx:value="Delivered" />
                    </FXCollections>
                </items>
            </ComboBox>
        </VBox>

       <!--next collumn><!-->

        <VBox GridPane.columnIndex="2" spacing="10">
            <TextField fx:id="orderIdField" promptText="Order ID (leave empty)"/>

            <TextField fx:id="customerIdField" promptText="Customer ID (leave empty)"/>

            <TextField fx:id="subscriptionIdField" promptText="Subscription ID (leave empty)"/>

            <TextArea fx:id="customerRequestsField" GridPane.rowSpan="5" prefWidth="200"
                      promptText="Extra requests"/>

            <Label fx:id="priceFieldLabel" text="  Price:" />

            <TextField fx:id="priceField" />

        </VBox>

        <!--next collumn><!-->

        <VBox GridPane.columnIndex="3" spacing="10">
            <TableView fx:id="chosenDishTable" prefWidth="400" GridPane.columnSpan="4"
                       GridPane.rowSpan="8">
                <TableColumn fx:id="dishNameCol" text="Dish name" />
                <TableColumn fx:id="quantityCol" text="Quantity" />
                <TableColumn fx:id="priceCol" text="Price" />
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

        <HBox GridPane.columnIndex="3" GridPane.rowIndex="2" spacing="10" alignment="CENTER">
            <ComboBox fx:id="chooseDishes" prefWidth="150" promptText="Dishes">
                <items>
                    <FXCollections fx:factory="observableArrayList" >
                    </FXCollections>
                </items>
            </ComboBox>

            <Button fx:id="addDishButton" styleClass="smallButton" text="Add" >
                <graphic>
                    <ImageView>
                        <Image url="@/labels/salesLabels/Plus.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="removeOrderDishButton" styleClass="smallButton" text="Remove" >
                <graphic>
                    <ImageView>
                        <Image url="@/labels/salesLabels/Cancel.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <!--next collumn><!-->

        <VBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="2">
           <children>
              <Button fx:id="createButton" styleClass="newOrderButton" text="Create new order" />
           </children>
        </VBox>
    </children>
</GridPane>
